<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingreso de Productos"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="24dp"
            android:background="@color/chocolate_medium"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/editTextId"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="ID del Producto"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/chocolate_dark"
            android:textColorHint="@color/chocolate_medium" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nombre del Producto"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/chocolate_dark"
            android:textColorHint="@color/chocolate_medium" />

        <EditText
            android:id="@+id/editTextDescripcion"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="DescripciÃ³n"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="top"
            android:textColor="@color/chocolate_dark"
            android:textColorHint="@color/chocolate_medium" />

        <EditText
            android:id="@+id/editTextPrecio"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Precio"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/chocolate_dark"
            android:textColorHint="@color/chocolate_medium" />

        <EditText
            android:id="@+id/editTextCantidad"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Cantidad"
            android:inputType="number"
            android:background="@drawable/edit_text_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/chocolate_dark"
            android:textColorHint="@color/chocolate_medium" />

        <ImageView
            android:id="@+id/imageViewFoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/cream_dark"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonTomarFoto"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Tomar Foto"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Guardar Producto"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonVolver"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Volver"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>
